---
const avatar = "https://pbs.twimg.com/profile_images/1464307315654508548/pWsglXIu_normal.jpg";
import {Image} from "astro:assets"

// Get the current page
const page = Astro.url;

// is this the home page?
const isHome = page.pathname === '/';

const isHide = !!Astro.props.hide;


// if there is an slash at the end of the url, remove it
// const pathname = page.pathname.endsWith('/') ? page.pathname.slice(0, -1).replace(/%20/g," ") : page.pathname;
const pathname = page.pathname.replace(/%20/g,"-");

---

<div class="flex py-2 dark:text-white justify-between max-w-screen-md mx-auto">

    <span class="cursor-default text-xl tracking-wide">
        ~{isHome ? "/" : pathname}
    </span>
    <a class="flex-0 group" href="/about">
        <Image
                width="48"
                height="48"
                loading="eager"

                src={avatar}

                class="rounded-full h-8 w-8 inline"
                alt="author's twitter profile avatar"
        />
        <span class="group-hover:underline">
            by Bekir
        </span>
    </a>
</div>

<nav class=`max-w-screen-md mx-auto flex gap-x-4 dark:text-neutral-500 text-neutral-500 `>
    <a class="tracking-wide underline hover:text-neutral-900 dark:hover:text-neutral-100" href="/">/home</a>
    <a class="tracking-wide underline hover:text-neutral-900 dark:hover:text-neutral-100" href="/tags">/tags</a>
    <a class="tracking-wide underline hover:text-neutral-900 dark:hover:text-neutral-100" href="/about">/about</a>
    <a class="tracking-wide underline hover:text-neutral-900 dark:hover:text-neutral-100" href="/social">/social</a>
    <a class="tracking-wide underline hover:text-neutral-900 dark:hover:text-neutral-100" href="/rss.xml">/rss.xml</a>
</nav>
